<?xml version="1.0" encoding="utf-8"?>

<com.fheebiy.view.FaceLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/main_container"
        android:clipChildren="true"
        android:layout_height="800dp">


<!--
    <com.fheebiy.view.AutoScrollViewPager
            android:id="@+id/asvierpager"
            android:layout_width="match_parent"
            android:layout_height="180dp">

    </com.fheebiy.view.AutoScrollViewPager>
-->


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/background_tab_pressed">

        <TextView
                android:id="@+id/anim_title1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="anim1"
                android:textColor="#7e7e7e"
                android:gravity="center"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/anim_title2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="anim2"
                android:textColor="#7e7e7e"
                android:gravity="center"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/anim_title3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="anim3"
                android:textColor="#7e7e7e"
                android:gravity="center"
                android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background_tab_pressed"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/animation_strip"
                android:layout_width="120dp"
                android:layout_height="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/strip"/>


    </LinearLayout>


    <android.support.v4.view.ViewPager
            android:id="@+id/anim_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</com.fheebiy.view.FaceLinearLayout>